  <style>
    body {
      margin: 0;
      background: #000;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      color: #ffffff;
    }

    .app {
      width: 360px;
      height: 640px;
      background: #131313;
      display: flex;
      flex-direction: column;
      border-radius: 16px;
      overflow: hidden;
    }

    .chat {
      flex: 1;
      padding: 12px;
      overflow-y: auto;
    }

    .message {
      background: #222222;
      padding: 10px 12px;
      border-radius: 12px;
      margin-bottom: 10px;
      font-size: 14px;
      line-height: 1.4;
      white-space: pre-line;
    }

    .message.user {
      align-self: flex-end;
      background: #8558FF;
    }

    .input-area {
      display: flex;
      padding: 10px;
      background: #131313;
      border-top: 1px solid #222;
    }

    .input-area input {
      flex: 1;
      background: #222222;
      border: none;
      border-radius: 10px;
      padding: 10px;
      color: #ffffff;
      font-size: 14px;
      outline: none;
    }

    .input-area button {
      margin-left: 8px;
      background: #8558FF;
