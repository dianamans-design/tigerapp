<body>

<div class="app">
  <div class="chat" id="chat"></div>
  <div class="input-area">
    <input type="text" id="input" placeholder="Напиши сообщение…" />
    <button id="send">Отправить</button>
  </div>
</div>

<script>
const OPENAI_API_KEY = "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";

const chat = document.getElementById("chat");
const input = document.getElementById("input");
const sendBtn = document.getElementById("send");

let step = 0;
let topic = "";
let exerciseText = "";

function addMessage(text, sender = "bot") {
  const msg = document.createElement("div");
  msg.className = "message" + (sender === "user" ? " user" : "");
  msg.textContent = text;
  chat.appendChild(msg);
  chat.scrollTop = chat.scrollHeight;
}

addMessage(
`Рад видеть тебя на практике! Давай потренируем твою грамматику.
Я составлю для тебя полезные упражнения, а ты можешь задать им любую интересную тебе тему.

Например, напиши мне «Игра престолов», «Олимпиада в Милане» или «Классические композиторы».
Если подойдет нейтральная тема, напиши «Удиви меня».`
);

sendBtn.onclick = handleSend;
input.onkeypress = e => { if (e.key === "Enter") handleSend(); };

async function handleSend() {
  if (!input.value.trim()) return;

  const userText = input.value;
  addMessage(userText, "user");
  input.value = "";

  if (step === 0) {
    topic = userText;
    await generateExercise();
    step++;
  } else if (step === 1) {
    await checkAnswers(userText);
    step++;
  }
}

async function generateExercise() {
  addMessage("Отличная тема, давай начинать! ⏳");

  const prompt = `
Ты — преподаватель английского языка.

Сгенерируй упражнение формата fill-the-gaps
на тему: "${topic}"

Грамматика: Past Simple vs Present Perfect

Требования:
- 8 предложений
- тема предложений связана с темой пользователя
- упражнения на английском
- инструкции на русском
- формат как в учебнике, с пропусками и глаголами в скобках
`;

  const response = await fetch("https://api.openai.com/v1/chat/completions", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      "Authorization": "Bearer " + OPENAI_API_KEY
    },
    body: JSON.stringify({
      model: "gpt-4o-mini",
      messages: [{ role: "user", content: prompt }],
      temperature: 0.7
    })
  });

  const data = await response.json();
  exerciseText = data.choices[0].message.content;

  addMessage(exerciseText);
}

async function checkAnswers(answers) {
  addMessage("Проверяю ответы… ⏳");

  const prompt = `
Вот упражнение:
${exerciseText}

Вот ответы ученика:
${answers}

Проверь ответы.
— Укажи 2 примера с объяснением (почему это Past Simple или Present Perfect)
— Если остальное верно, похвали
— Пиши по-русски
`;

  const response = await fetch("https://api.openai.com/v1/chat/completions", {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      "Authorization": "Bearer " + OPENAI_API_KEY
    },
    body: JSON.stringify({
      model: "gpt-4o-mini",
      messages: [{ role: "user", content: prompt }],
      temperature: 0.6
    })
  });

  const data = await response.json();
  addMessage(data.choices[0].message.content);
}
</script>

</body>
</html>
